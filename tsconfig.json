{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "types": ["node"],
    "allowJs": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
